<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zk.robotmonitor.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- left side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:layout_weight="1">

            <!-- 左上 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/cyan"
                android:layout_marginBottom="@dimen/DIMEN_10PX"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_robot_cut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/cut"
                    android:drawableTop="@mipmap/cut"
                    style="@style/MainTextViewStyle"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_robot_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/code"
                    style="@style/MainTextViewStyle"
                    android:text="@string/code"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!-- 左下 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/cyan"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_robot_weld"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/weld"
                    android:drawableTop="@mipmap/weld"
                    style="@style/MainTextViewStyle"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_robot_carry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/carry"
                    android:drawableTop="@mipmap/manipulator"
                    style="@style/MainTextViewStyle"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Right side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_weight="1">

            <!-- 右上 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/cyan"
                android:layout_marginBottom="@dimen/DIMEN_10PX"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_camera_check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/version"
                    android:drawableTop="@mipmap/camera"
                    style="@style/MainTextViewStyle"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_agv_car"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/carry"
                    android:drawableTop="@mipmap/car"
                    style="@style/MainTextViewStyle"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!-- 右下 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/cyan"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_exception_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/exception"
                    android:drawableTop="@mipmap/alert"
                    style="@style/MainTextViewStyle"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
